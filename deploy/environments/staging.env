# Application
NODE_ENV=staging
PORT=3000
APP_NAME=Garment Platform Staging
APP_URL=https://staging.garmentplatform.com

# Database
DB_HOST=localhost
DB_PORT=3306
DB_NAME=garment_platform_staging
DB_USER=garment_user
DB_PASSWORD=GarmentApp2024!

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=staging-jwt-secret-replace-with-secure-key
JWT_EXPIRES_IN=7d

# File Upload
UPLOAD_LIMIT=10MB
UPLOAD_PATH=/opt/garment-platform/uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif

# Email
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your_sendgrid_api_key

# Logging
LOG_LEVEL=info
LOG_FILE=/opt/garment-platform/logs/application.log

# Monitoring
HEALTH_CHECK_INTERVAL=30000

# AWS (for S3 uploads in staging)
AWS_REGION=us-east-1
AWS_S3_BUCKET=garment-platform-staging-uploads