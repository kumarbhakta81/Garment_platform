# Application
NODE_ENV=production
PORT=3000
APP_NAME=Garment Platform
APP_URL=https://garmentplatform.com

# Database
DB_HOST=localhost
DB_PORT=3306
DB_NAME=garment_platform_prod
DB_USER=garment_user
DB_PASSWORD=SecureProductionPassword2024!

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=super-secure-production-jwt-secret-min-32-chars
JWT_EXPIRES_IN=24h

# File Upload
UPLOAD_LIMIT=5MB
UPLOAD_PATH=/opt/garment-platform/uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif

# Email
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your_production_sendgrid_api_key

# Logging
LOG_LEVEL=warn
LOG_FILE=/opt/garment-platform/logs/application.log

# Monitoring
HEALTH_CHECK_INTERVAL=60000

# AWS (for S3 uploads in production)
AWS_REGION=us-east-1
AWS_S3_BUCKET=garment-platform-production-uploads

# Security
CORS_ORIGIN=https://garmentplatform.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100